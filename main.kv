<MDLabel>
	font_size: 18
    

<MainWindow>	

	BoxLayout:
		orientation: 'vertical'
		size: root.width, root.height	

		ScrollView:		
			size_hint_y: 0.93
			pos_hint: {'x': 0, "y": 0}
			do_scroll_x: False			
			do_scroll_y: True			
				
			GridLayout:			
				size: (root.width, root.height)
				size_hint_x: None
				size_hint_y: None
				cols: 4
				rows: 24
				height: self.minimum_height
								
		        	
				# Row
				MDLabel:
					text: "Jaja"
					size_hint: (.3, None)				
					halign: "center"

				MDLabel:							
