					size_hint: (.1, None)				
					halign: "center"

				MDLabel:
					text: "kom"
					size_hint: (.15, None)				
					halign: "center"

				MDSlider:
					id: sl_jaja				
					min: 0
					max: 150
					value: root.sve[0][0]
					step: 10
					size_hint: (.45, None)
					#on_value: root.slide_it(*args)

